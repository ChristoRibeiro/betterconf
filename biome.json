{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "correctness": {
        "noNodejsModules": "off"
      },
      "style": {
        "noNamespaceImport": "off",
        "useNamingConvention": "info",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120,
      "quoteStyle": "double",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  }
}
